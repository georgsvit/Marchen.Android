<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">

    <data>
        <import type="android.view.View"/>
        <variable
            name="accountViewModel"
            type="com.example.marchenandroid.ui.profile.ProfileViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account.AccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:padding="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="149dp"
                        android:layout_height="match_parent"
                        android:text="@string/string_name_doubledot"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/new_text_color"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="238dp"
                        android:layout_height="match_parent"
                        android:text="@{accountViewModel.user.fullname}"
                        android:textColor="@color/new_text_color"
                        android:textSize="28sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="@string/string_pole_doubledots"
                        android:textColor="@color/new_text_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="241dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/new_text_color"
                        android:text="@{accountViewModel.user.role}"
                        android:textSize="28sp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/getIdBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Id"
                android:visibility="@{accountViewModel.userRole == 1 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tableLayout"
                app:layout_constraintVertical_bias="0.959" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toTopOf="@+id/getIdBtn"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>